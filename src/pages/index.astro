---
import Layout from "../layouts/Layout.astro";
import { BrandLinks } from "../components/Header";
import { ChevronDown } from "../components/Header";
import TextAnimation from "../components/TextAnimation.astro";
import MainTitle from "../components/MainTitle.astro";
import Projects from "../components/Projects.astro";
import AboutMe from "../components/AboutMe.astro";
import { Technologies } from "../components/Technologies";
import { Experience } from "../components/Experience";
---

<Layout title="Hi, i'm Samuel">
	<!-- <h1 class="font-bold text-[280px] text-blue/10 absolute top-0 left-0 -z-10">FRONTEND</h1>
	<h1 class="font-bold text-[280px] text-blue/10 absolute top-80 left-0 -z-10">UI DESIGN</h1> -->

	<div class="portfolio-section">
		<section
			class="flex flex-col-reverse md:flex-row md:items-center justify-between"
		>
			<article class="flex flex-col gap-1 md:gap-2 md:pb-6">
				<p class="font-medium text-xl md:text-4xl">Hi, my name is</p>

				<h1
					class="font-bold text-5xl text-transparent md:text-[9dvw] bg-gradient-to-r from-blue to-orange bg-clip-text"
				>
					Samuel Ortiz
				</h1>

				<TextAnimation />

				<div
					class="flex flex-col md:flex-row gap-2 md:gap-6 md:items-center mt-4 md:mt-9"
				>
					<h2 class="font-medium text-lg md:text-2xl">
						Check Out My
					</h2>
					<span class="flex gap-2">
						<BrandLinks />
					</span>
				</div>
			</article>
			<picture
				id="hero-image"
				class="md:max-w-4xl transition-all duration-300 ease-out hover:drop-shadow-[0_-10px_40px_rgb(67,2,222,0.8)]"
			>
				<img src="/heroImage.webp" alt="" />
			</picture>
		</section>
		<section class="flex items-center pt-8 md:pt-2 justify-center">
			<button
				id="scrollButton"
				class="grid place-items-center gap-6 font-medium"
			>
				Who's Samuel?
				<span
					class="rounded-full bg-orange/30 animate-bounce p-2 transition-all ease-in-out duration-200 hover:bg-orange hover:text-dark"
				>
					<ChevronDown />
				</span>
			</button>
		</section>
	</div>

	<div class="portfolio-section">
		<MainTitle>My Work Experience</MainTitle>
		<section class="mt-8">
			<Experience />
		</section>
	</div>

	<div class="portfolio-section">
		<MainTitle>Technologies</MainTitle>
		<section class="mt-8">
			<Technologies />
		</section>
	</div>

	<div class="portfolio-section">
		<MainTitle>Cool things i've designed and developed</MainTitle>
		<section class="mt-8">
			<Projects />
		</section>
	</div>

	<div id="about" class="portfolio-section">
		<MainTitle>Get to know me</MainTitle>
		<section class="mt-8">
			<AboutMe />
		</section>
	</div>
</Layout>

<style>
	#hero-image {
		animation: levitate 6s ease-in-out infinite;
	}

	#hero-image:hover {
		animation: levitate 6s ease-in-out infinite;
	}

	@keyframes levitate {
		0% {
			transform: translateY(15px);
		}
		50% {
			transform: translateY(-15px);
		}
		100% {
			transform: translateY(15px);
		}
	}
</style>

<script>
	import gsap from "gsap";
	import { ScrollTrigger } from "gsap/ScrollTrigger";
	gsap.registerPlugin(ScrollTrigger);

	const button = document.getElementById("scrollButton");
	const aboutSection = document.getElementById("about");

	button.addEventListener("click", () => {
		aboutSection.scrollIntoView({ behavior: "smooth" });
	});

	const sections = document.querySelectorAll(".portfolio-section");

	//animations
	sections.forEach((div) => {
		gsap.fromTo(
			div,
			{ y: 50, opacity: 0 },
			{
				y: 0,
				opacity: 1,
				duration: 0.5,
				scrollTrigger: {
					trigger: div,
					start: "top 80%",
					once: true,
				},
			},
		);
	});
</script>
